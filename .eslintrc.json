{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-undef": "off",
        "linebreak-style": "off",
        "no-console": "off",
        "consistent-return": "off",
        "no-underscore-dangle": "off",
        "prefer-destructuring": "off",
        "no-unused-expressions": "off",
        "prefer-promise-reject-errors": "off",
        "arrow-body-style": "off",
        "indent": ["error", 4]
    }
}
