{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Book Store App",
        "description": "This app is build for creating api's for bookstore"
    },
    "host": "localhost:3000",
    "tags": [
        {
            "name": "Book Store",
            "description": "API for user registration"
        }
    ],
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/admin": {
            "post": {
                "tags": [
                    "BookStore"
                ],
                "summary": "admin Registration",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Admin Registration"
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "400": {
                        "description": "Failed to register"
                    }
                }
            }
        },
        "/user": {
            "post": {
                "tags": [
                    "BookStore"
                ],
                "summary": "user Registration",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "User Registration"
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "400": {
                        "description": "Failed to register"
                    }
                }
            }
        },
        "/userLogin": {
            "post": {
                "tags": [
                    "BookStore"
                ],
                "summary": "user Login",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "login"
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "logged in successfully"
                    },
                    "400": {
                        "description": "login failed"
                    }
                }
            }
        },
        "/adminLogin": {
            "post": {
                "tags": [
                    "BookStore"
                ],
                "summary": "admin Login",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "login"
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "logged in successfully"
                    },
                    "400": {
                        "description": "login failed"
                    }
                }
            }
        },
        "/forgetPassword": {
            "post": {
                "tags": [
                    "BookStore"
                ],
                "summary": "Forgot Password",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "forgot password"
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Password reset mail sent successfully"
                    },
                    "400": {
                        "description": "Failed to send mail"
                    }
                }
            }
        },
        "/resetPassword": {
            "post": {
                "tags": [
                    "BookStore"
                ],
                "summary": "Reset Password",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "reset password"
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Password reset successfully"
                    },
                    "400": {
                        "description": "Failed to reset password"
                    }
                }
            }
        }
    }
}